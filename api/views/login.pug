extends layout 

block content 

    if error 
        h1.error #{error}

    if currentUser 
        h1 You're already logged in!
    else
        form(class='login-form' method='POST' action='/admin')
            h2.login-form-title Admin Login
            label(for='username') Username:
            input(class='text-field' type='text' id='username' name='username' placeholder=' ' required)
            label(for='password') Password:
            input(class='text-field' type='password' id='password' name='password' placeholder=' ' required)
            input(class='button form-submit' type='submit')
