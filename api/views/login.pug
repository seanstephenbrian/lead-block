extends layout 

block content 

    if error 
        h1.error #{error}

    form(class='login-form' method='POST')
        h2.login-form-title Admin Login
        label(for='username') Username:
        input(class='text-field' type='text' id='username' name='username' placeholder=' ' required)
        label(for='password') Password:
        input(class='text-field' type='password' id='password' name='password' placeholder=' ' required)
        input(class='form-submit' type='submit' value='Log In')
